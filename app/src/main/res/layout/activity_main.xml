<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/myUsername"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="Enter Username..."
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLabel"
        android:layout_width="106dp"
        android:layout_height="59dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="40dp"
        android:text="PayIt"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Username:"
        app:layout_constraintBottom_toTopOf="@+id/myUsername"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text="Password:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myUsername" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="40dp"
        android:text="Login/Sign In"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myPassword" />

    <EditText
        android:id="@+id/myRollnum"
        android:layout_width="158dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Enter ID..."
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/myUsername"
        app:layout_constraintTop_toBottomOf="@+id/iLabel" />

    <TextView
        android:id="@+id/iLabel"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:text="ID:"
        app:layout_constraintStart_toEndOf="@+id/uLabel"
        app:layout_constraintTop_toBottomOf="@+id/buttonLabel" />

    <EditText
        android:id="@+id/myPassword"
        android:layout_width="298dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:hint="Enter Password..."
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pLabel" />

    <Button
        android:id="@+id/newDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="24dp"
        android:text="Clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>